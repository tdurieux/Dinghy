{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6"],
    "target": "es5",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "incremental": true
    // "moduleResolution": "node"
  },
  "include": ["lib/index.ts"],
  "exclude": [],
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  }
}
